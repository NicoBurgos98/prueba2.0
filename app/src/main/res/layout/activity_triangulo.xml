<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Triangulo">

    <TextView
        android:id="@+id/idTextTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GEOMETRIA"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/idTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Area"
        android:textAlignment="center"
        android:textSize="19sp"

        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/areatri" />

    <EditText
        android:id="@+id/idbaseTriangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresar base"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/idalturaTriangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresar Altura"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/idcalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="AreaTri"
        android:text="Calcular" />

    <TextView
        android:id="@+id/idResultadoTriangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Aqui va el Resultado"
        android:textAlignment="center"
        android:textSize="30sp" />

</LinearLayout>